<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Open+Sans">
    <link rel="stylesheet"
          href="/assets/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet"
          href="/assets/bootstrap-horizon/bootstrap-horizon.css">
    <link rel="stylesheet"
          href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">
    <link rel='stylesheet'
          href='/stylesheets/style.css'/>
</head>
<body>
<div class="container-fluid">
    <header class="row kiosk-header">
        <div class="col-md-12 text-center">
            <div class="logo pull-left">
                <img src="/images/butterfish-horiz.png"
                     class="home"
                     alt="Butterfish">
                <span class="debug"></span>
            </div>

            <span class="orders-waiting">
                <span class="current-order-index">0</span> /
                <span class="num-orders">0</span>
            </span>

            <div class="printer pull-right">
                <i class="pull-right completed-orders fa fa-list"></i>
                <i class="pull-right printerSettings fa fa-gear"
                   data-toggle="modal"
                   data-target="#myPrinterSettingsModal"></i>
            </div>

            <div class="date-time pull-right"></div>
        </div>
    </header>

    <header class="row order-header">
        <div class="col-md-12 order-header-inner">&nbsp;</div>
    </header>

    <div class="row row-horizon order-columns"></div>
</div>

<footer class="actions text-center">
    <button class="btn btn-lg btn-default complete-order">Complete This Order</button>
    <i class="fa fa-chevron-circle-left previous pull-left"></i>
    <i class="fa fa-chevron-circle-right next pull-right"></i>
</footer>

<div class="food-signal">&nbsp;</div>

<!-- Modals -->
<div class="modal fade settings-modal"
     id="myPrinterSettingsModal"
     tabindex="-1"
     role="dialog">
    <div class="modal-dialog"
         role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button"
                        class="close"
                        data-dismiss="modal"
                        aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Butterfish Kiosk Settings</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="printerIpAddress">Printer IP</label>
                            <input id="printerIpAddress"
                                   class="printerIp form-control"
                                   placeholder="Enter IP Address"
                                   autofocus="autofocus"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button"
                        class="save btn-primary">Save changes
                </button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade order-view-modal"
     id="myOrderViewModal"
     tabindex="-1"
     role="dialog">
    <div class="modal-dialog"
         role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button"
                        class="close"
                        data-dismiss="modal"
                        aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h3 class="modal-title">Order Details</h3>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <h4 class="orderName"></h4>
                            <div class="orderDetails" style="width: 100%"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="pull-right reprint btn btn-sm">Reprint</button>
            </div>
        </div>
    </div>
</div>

<script>
    window.locationId = '<%= locationId %>';
</script>

<script src="/assets/async/dist/async.min.js"></script>
<script src="https://cdn.jsdelivr.net/bluebird/latest/bluebird.min.js"></script>
<script src="/assets/moment/min/moment.min.js"></script>
<script src="/assets/jquery/dist/jquery.min.js"></script>
<script src="/assets/lodash/dist/lodash.min.js"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/assets/mousetrap/mousetrap.min.js"></script>
<script src="/assets/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="/js/StarWebPrintBuilder.js"></script>
<script src="/js/StarWebPrintTrader.js"></script>

<script src="/js/orders.js"></script>
<script src="/js/header.js"></script>
<script src="/js/keyboard.js"></script>
<script src="/js/print.js"></script>
<script src="/js/app.js"></script>

</body>
</html>
